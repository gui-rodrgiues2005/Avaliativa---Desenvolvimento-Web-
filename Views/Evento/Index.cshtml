@model IEnumerable<Avaliativa.Models.Evento>

@{
    ViewData["Title"] = "Lista de Eventos";
}

<style>
    body {
        background-color: #f8f9fa;
        font-family: 'Arial', sans-serif;
    }

    .container {
        max-width: 90%;
        margin: 0 auto;
        padding: 50px;
    }

    .header {
        text-align: center;
        margin-bottom: 40px;
    }

        .header h2 {
            color: #2C3E50;
            font-size: 36px;
            font-weight: bold;
        }

        .header p {
            font-size: 18px;
            color: #7F8C8D;
        }

    .alert-success {
        border-radius: 8px;
        font-size: 16px;
    }

    .button-container {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
    }

    .custom-button {
        padding: 12px 20px;
        font-size: 18px;
        font-weight: bold;
        border-radius: 8px;
        text-decoration: none;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

    .custom-button-add {
        background-color: #2ECC71;
        color: white;
    }

    .custom-button-add:hover {
        background-color: #27AE60;
        transform: scale(1.05);
    }

    .table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

        .table th, .table td {
            padding: 15px;
            text-align: left;
            font-size: 16px;
        }

        .table th {
            background-color: #34495E;
            color: white;
            font-weight: bold;
        }

    .table-striped tbody tr:nth-of-type(odd) {
        background-color: #f2f2f2;
    }

    .table-hover tbody tr:hover {
        background-color: #ecf0f1;
    }

    .action-buttons {
        display: flex;
        gap: 10px;
    }

    .btn-sm {
        font-size: 14px;
        padding: 8px 12px;
    }
</style>

<div class="container">
    <div class="header">
        <h2>Lista de Eventos</h2>
        <p>Abaixo está a lista de todos os eventos cadastrados no sistema.</p>
    </div>

    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success">
            @TempData["MensagemSucesso"]
        </div>
    }

    <div class="button-container">
        <p class="text-muted">Abaixo está a lista dos eventos cadastrados.</p>
        <a asp-controller="Evento" asp-action="Create" class="custom-button custom-button-add">Adicionar Evento</a>
    </div>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Data/Hora</th>
                <th>Local</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Nome</td>
                    <td>@item.Data.ToString("Dia - dd/MM/yyyy 'às' HH:mm 'horas'")</td>
                    <td>@item.Local</td>
                    <td class="action-buttons">
                        <a asp-action="Edit" asp-route-id="@item.EventoId" class="btn btn-warning btn-sm">Editar</a>
                        <form asp-action="Delete" asp-route-id="@item.EventoId" method="post" style="display:inline;" onsubmit="return confirm('Tem certeza que deseja excluir este evento?');">
                            <input type="hidden" name="_method" value="DELETE" />
                            <a asp-action="Details" asp-route-id="@item.EventoId" class="btn btn-info btn-sm text-white">Detalhes</a>
                            <button type="submit" class="btn btn-danger btn-sm">Excluir</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
